{
  "name": "awards-admin-panel",
  "version": "1.0.0",
  "description": "Client code for ACP",
  "main": "index.js",
  "scripts": {
    "build": "NODE_ENV=production browserify -t envify -g uglifyify index.js -o ../../public/js/acp.js",
    "watch-css": "catw -wvc 'lessc - --include-path=../../style' '../../style/acp.less' -o ../../public/css/acp.css",
    "watch-js": "watchify index.js -o ../../public/js/acp.js --verbose",
    "watch": "npm run watch-css & npm run watch-js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "acp",
    "nodebb"
  ],
  "browserify": {
    "transform": [
      "reactify",
      "envify",
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "app": "global:app",
    "ajaxify": "global:ajaxify",
    "jquery": "global:$",
    "socket": "global:socket",
    "define": "global:define",
    "bootstrap": {
      "exports": "global:bootstrap",
      "depends": [
        "jquery"
      ]
    },
    "bootbox": {
      "exports": "global:bootbox",
      "depends": [
        "jquery",
        "bootstrap"
      ]
    },
    "StripeCheckout": "global:StripeCheckout"
  },
  "author": "Nicolas Siver",
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.2.5",
    "dropzone": "^4.3.0",
    "flux": "^3.0.0",
    "keymirror": "^0.1.1",
    "lodash": "^4.16.4",
    "object-assign": "^4.1.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-tooltip": "^3.2.1"
  },
  "devDependencies": {
    "browserify": "^13.1.0",
    "browserify-shim": "^3.8.12",
    "catw": "^1.0.0",
    "envify": "^3.4.1",
    "less": "^2.7.1",
    "less-watch-compiler": "^1.2.3",
    "reactify": "^1.1.0",
    "uglifyify": "^3.0.3"
  }
}
