{
  "name": "awards-admin-panel",
  "version": "1.0.0",
  "description": "Client code for ACP",
  "main": "index.js",
  "scripts": {
    "build": "browserify . -o ../../public/js/acp.js",
    "watch-css": "catw -wvc 'lessc - --include-path=style' 'style/*.less' -o ../../public/css/acp.css",
    "watch-js": "watchify index.js -o ../../public/js/acp.js --verbose",
    "watch-zip": "watchify index.js -o 'uglifyjs -c > ../../public/js/acp.js' --verbose",
    "watch": "npm run watch-css & npm run watch-js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "acp",
    "nodebb"
  ],
  "browserify": {
    "transform": [
      "reactify",
      "envify",
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "jquery": "global:$",
    "socket": "global:socket",
    "define": "global:define",
    "bootstrap": {
      "exports": "global:bootstrap",
      "depends": [
        "jquery"
      ]
    },
    "bootbox": {
      "exports": "global:bootbox",
      "depends": [
        "jquery",
        "bootstrap"
      ]
    }
  },
  "author": "Nicolas Siver",
  "license": "MIT",
  "dependencies": {
    "classnames": "^1.2.2",
    "dropzone": "^4.0.1",
    "flux": "^2.0.1",
    "lodash": "^3.7.0",
    "react": "^0.13.1"
  },
  "devDependencies": {
    "browserify": "^9.0.8",
    "browserify-shim": "^3.8.5",
    "catw": "^1.0.0",
    "envify": "^3.4.0",
    "less": "^2.5.0",
    "less-watch-compiler": "^1.1.3",
    "reactify": "^1.1.0",
    "uglify-js": "^2.4.20"
  }
}
